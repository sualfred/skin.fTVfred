<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- videolibrary -->
	<menucontrol>5000</menucontrol>
	<backgroundcolor>0xff12161b</backgroundcolor>
	<defaultcontrol always="true">59</defaultcontrol>
	<views>59</views>
	<controls>
		<!-- Views -->
		<include>Viewtype59</include>
		<control type="group">
			<include>VisibleDelayFadeAnimation</include>
			<animation delay="400" effect="fade" end="100" start="0" time="200">WindowOpen</animation>
			<!-- Heading / Current item / Total items -->
			<control type="grouplist">
				<left>198</left>
				<top>134</top>
				<height>80</height>
				<itemgap>10</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<include>VisibleDelayFadeAnimation</include>
				<control type="label">
					<width>auto</width>
					<height>60</height>
					<font>Med48</font>
					<aligny>bottom</aligny>
					<textcolor>ffdadada</textcolor>
					<label>[CAPITALIZE]$VAR[PVRPath][/CAPITALIZE]  </label>
				</control>
				<control type="label">
					<top>15</top>
					<width>auto</width>
					<height>60</height>
					<font>Med32</font>
					<aligny>bottom</aligny>
					<textcolor>ffdadada</textcolor>
					<label>$INFO[Container.CurrentItem]</label>
					<visible>IntegerGreaterThan(Container.NumItems,0)</visible>
				</control>
				<control type="label">
					<top>14</top>
					<width>auto</width>
					<height>60</height>
					<font>Light36</font>
					<aligny>bottom</aligny>
					<textcolor>ff505050</textcolor>
					<label>|</label>
					<visible>IntegerGreaterThan(Container.NumItems,0)</visible>
				</control>
				<control type="label">
					<top>15</top>
					<width>auto</width>
					<height>60</height>
					<font>Light32</font>
					<aligny>bottom</aligny>
					<textcolor>ff505050</textcolor>
					<label>$INFO[Container.NumItems]</label>
					<visible>IntegerGreaterThan(Container.NumItems,0)</visible>
				</control>
			</control>
			<!-- Sort method -->
			<control type="grouplist">
				<left>1360</left>
				<top>153</top>
				<width>440</width>
				<height>60</height>
				<align>right</align>
				<itemgap>6</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<include>VisibleDelayFadeAnimation</include>
				<control type="label">
					<width>auto</width>
					<height>30</height>
					<font>Light28</font>
					<align>right</align>
					<textcolor>ffa4a4a4</textcolor>
					<label>$LOCALIZE[31086]</label>
				</control>
				<control type="label">
					<top>1</top>
					<width>auto</width>
					<height>30</height>
					<align>right</align>
					<font>Med28</font>
					<textcolor>ffa4a4a4</textcolor>
					<label>$INFO[Container.SortMethod]</label>
				</control>
			</control>
			<!-- Lower group -->
			<control type="group">
				<left>196</left>
				<top>807</top>
				<include>VisibleDelayFadeAnimation</include>
				<visible>!IsEmpty(Container.PluginName) | [!Container.Content(movies) + !Container.Content(sets) + !Container.Content(tvshows) + !Container.Content(seasons) + !Container.Content(episodes)]</visible>
				<!-- Controls -->
				<control id="1000" type="grouplist">
					<left>-10</left>
					<height>100</height>
					<itemgap>0</itemgap>
					<onleft>50</onleft>
					<onright>50</onright>
					<orientation>horizontal</orientation>
					<usecontrolcoords>true</usecontrolcoords>
					<defaultcontrol always="true">1001</defaultcontrol>
					<!-- Dummy to always set focus to first visible button -->
					<control id="1001" type="button">
						<width>0</width>
						<height>0</height>
						<label>-</label>
						<onfocus>Right</onfocus>
						<include>NoTextures</include>
						<visible>!Control.HasFocus(31)</visible>
					</control>
					<control id="33" type="button">
						<width min="104" max="204">auto</width>
						<wrapmultiline>true</wrapmultiline>
						<height>100</height>
						<onup>59</onup>
						<ondown>3000</ondown>
						<onclick>ActivateWindow(tvguide)</onclick>
						<font>Med24</font>
						<label>$LOCALIZE[31545]</label>
						<textoffsetx>28</textoffsetx>
						<textcolor>ffdadada</textcolor>
						<focusedcolor>ff222222</focusedcolor>
						<texturefocus border="13,5,6,8">views/button_fo.png</texturefocus>
						<texturenofocus border="13,3,6,6">views/button_nf.png</texturenofocus>
						<visible>!StringCompare(Container(59).ListItem.Label,..)</visible>
					</control>
					<control id="30" type="button">
						<width min="104" max="204">auto</width>
						<wrapmultiline>true</wrapmultiline>
						<height>100</height>
						<onup>59</onup>
						<ondown>3000</ondown>
						<onclick>NextChannelGroup</onclick>
						<font>Med24</font>
						<label>[CAPITALIZE]$LOCALIZE[19141][CR]$VAR[PVRPath][/CAPITALIZE]</label>
						<textoffsetx>28</textoffsetx>
						<textcolor>ffdadada</textcolor>
						<focusedcolor>ff222222</focusedcolor>
						<texturefocus border="13,5,6,8">views/button_fo.png</texturefocus>
						<texturenofocus border="13,3,6,6">views/button_nf.png</texturenofocus>
						<visible>!StringCompare(ListItem.Label,..)</visible>
					</control>
					<control id="32" type="button">
						<width min="104" max="204">auto</width>
						<wrapmultiline>true</wrapmultiline>
						<height>100</height>
						<onup>59</onup>
						<ondown>3000</ondown>
						<onclick>ActivateWindow(tvrecordings)</onclick>
						<font>Med24</font>
						<label>$LOCALIZE[31546]</label>
						<textoffsetx>28</textoffsetx>
						<textcolor>ffdadada</textcolor>
						<focusedcolor>ff222222</focusedcolor>
						<texturefocus border="13,5,6,8">views/button_fo.png</texturefocus>
						<texturenofocus border="13,3,6,6">views/button_nf.png</texturenofocus>
						<visible>!StringCompare(Container(59).ListItem.Label,..)</visible>
					</control>
				</control>
				<!-- Small Details -->
				<control type="grouplist">
					<top>110</top>
					<height>26</height>
					<itemgap>10</itemgap>
					<orientation>horizontal</orientation>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="label">
						<width>auto</width>
						<height>24</height>
						<font>Med24Num</font>
						<aligny>bottom</aligny>
						<textcolor>ffFFC24B</textcolor>
						<label>$INFO[ListItem.ChannelName]</label>
					</control>
					<control type="label">
						<width>auto</width>
						<height>24</height>
						<font>Med24Num</font>
						<aligny>bottom</aligny>
						<textcolor>ffbebebe</textcolor>
						<label>$INFO[ListItem.StartTime,,,  â€¢  ]$INFO[ListItem.EndTime, - ,]</label>
					</control>
					<control type="label">
						<width>auto</width>
						<height>24</height>
						<font>Med24Num</font>
						<aligny>bottom</aligny>
						<textcolor>ffbebebe</textcolor>
						<label>$INFO[ListItem.Genre]</label>
						<visible>!StringCompare(ListItem.Genre,$LOCALIZE[19499])</visible>
					</control>
				</control>
				<!-- Details -->
				<control type="textbox">
					<top>143</top>
					<width>1192</width>
					<height>84</height>
					<align>left</align>
					<font>Reg30Spaced</font>
					<pagecontrol>99</pagecontrol>
					<autoscroll>false</autoscroll>
					<textcolor>ffbcbcbc</textcolor>
					<label>[B]$INFO[ListItem.Title][/B] [LIGHT]$VAR[Plot][/LIGHT]</label>
				</control>
				<control id="99" type="scrollbar">
					<top>103</top>
					<width>1192</width>
					<height>126</height>
					<showonepage>false</showonepage>
					<orientation>vertical</orientation>
				</control>
				<!-- More button -->
				<control id="3000" type="button">
					<left>1194</left>
					<top>192</top>
					<width>37</width>
					<height>23</height>
					<onup>59</onup>
					<ondown>noop</ondown>
					<onleft>59</onleft>
					<onright>59</onright>
					<onclick>SetProperty(OpenTextViewer,1,home)</onclick>
					<onclick>RunScript(script.toolbox,info=textviewer,header=$INFO[ListItem.Label],text='"$VAR[Plot]"')</onclick>
					<visible>Control.IsVisible(99)</visible>
					<texturefocus>views/more_fo.png</texturefocus>
					<texturenofocus>views/more_nf.png</texturenofocus>
					<visible>!Window.IsVisible(textviewer)</visible>
				</control>
				<!-- More button -->
				<control type="image">
					<left>1194</left>
					<top>192</top>
					<width>37</width>
					<height>23</height>
					<texture>views/more_nf.png</texture>
					<visible>Window.IsVisible(textviewer)</visible>
				</control>
			</control>
		</control>
	</controls>
</window>