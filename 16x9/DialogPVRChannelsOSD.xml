<?xml version="1.0" encoding="UTF-8"?>
<!-- Channel OSD -->
<window>
	<defaultcontrol always="true">11</defaultcontrol>
	<controls>

		<control type="group">	
			<width>644</width>
			<animation easing="inout" effect="slide" end="0,0" start="-614,0" time="120" tween="sine">WindowOpen</animation>
			<animation easing="inout" effect="slide" end="-614,0" start="0,0" time="120" tween="sine">WindowClose</animation>
			<animation easing="inout" effect="slide" end="0,0" start="-614,0" time="120" tween="sine">Visible</animation>
			<animation easing="inout" effect="slide" end="-614,0" start="0,0" time="120" tween="sine">Hidden</animation>

			<!-- background -->
			<control type="image">
				<left>0</left>
				<top>-1</top>
				<width>630</width>
				<height>1082</height>
				<texture border="4,7,4,7">pvr/channel_osd_bg.png</texture>
			</control>

			<!-- list -->
			<control type="group">
				<animation condition="IntegerGreaterThan(Container(11).NumItems,3) + Container(11).Row(0)" effect="slide" end="0,-22" time="200">Conditional</animation>
				<animation condition="IntegerGreaterThan(Container(11).NumItems,4) + Container(11).Row(1)" effect="slide" end="0,-66" time="200">Conditional</animation>
				<animation condition="IntegerGreaterThan(Container(11).NumItems,4) + Container(11).Row(2)" effect="slide" end="0,-110" time="200">Conditional</animation>
				<animation condition="IntegerGreaterThan(Container(11).NumItems,4) + Container(11).Row(3)" effect="slide" end="0,-154" time="200">Conditional</animation>
				<animation condition="IntegerGreaterThan(Container(11).NumItems,4) + Container(11).Row(4)" effect="slide" end="0,-198" time="200">Conditional</animation>
				<animation condition="IntegerGreaterThan(Container(11).NumItems,4) + Container(11).Row(5)" effect="slide" end="0,-242" time="200">Conditional</animation>
				<animation condition="StringCompare(Container(11).NumItems,4)" effect="slide" end="0,-188" time="0">Conditional</animation>
				<animation condition="StringCompare(Container(11).NumItems,3)" effect="slide" end="0,-188" time="0">Conditional</animation>
				<animation condition="StringCompare(Container(11).NumItems,2)" effect="slide" end="0,-354" time="0">Conditional</animation>
				<animation condition="StringCompare(Container(11).NumItems,1)" effect="slide" end="0,-354" time="0">Conditional</animation>

				<control type="fixedlist" id="11">
					<left>0</left>
					<top>200</top>
					<height>1000</height>
					<width>614</width>
					<orientation>vertical</orientation>
					<onleft>NextChannelGroup</onleft>
					<onright>NextChannelGroup</onright>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<preloaditems>2</preloaditems>
					<focusposition>2</focusposition>
					<movement>3</movement>
					<scrolltime easing="out" tween="sine">180</scrolltime>

					<itemlayout height="166">
						<control type="image">
							<left>21</left>
							<top>160</top>
							<width>591</width>
							<height>2</height>
							<texture>pvr/_PVR_OSD_LINE.png</texture>
						</control>
						<control type="image">
							<left>40</left>
							<top>12</top>
							<width>117</width>
							<height>117</height>
							<texture fallback="views/pvr_fallback.png">$INFO[ListItem.Icon]</texture>
							<aspectratio>keep</aspectratio>
						</control>
						<control type="progress">
							<left>40</left>
							<top>136</top>
							<width>117</width>
							<height>6</height>
							<texturebg border="4">osd/progress_back.png</texturebg>
							<lefttexture>-</lefttexture>
							<midtexture border="4">osd/progress_bar.png</midtexture>
							<righttexture>-</righttexture>
							<overlaytexture>-</overlaytexture>
							<info>ListItem.Progress</info>
						</control>

						<control type="label">
							<left>40</left>
							<top>90</top>
							<width>117</width>
							<height>40</height>
							<align>left</align>
							<textoffsetx>10</textoffsetx>
							<textcolor>ff505050</textcolor>
							<selectedcolor>ff505050</selectedcolor>
							<font>Med20</font>
							<label fallback="195">$INFO[ListItem.ChannelName]</label>
							<visible>IsEmpty(ListItem.Icon)</visible>
						</control>

						<control type="group">
							<top>-100</top>
							<control type="label">
								<left>180</left>
								<top>0</top>
								<width>400</width>
								<align>left</align>
								<textcolor>white</textcolor>
								<selectedcolor>white</selectedcolor>
								<font>Med26</font>
								<label fallback="195">$INFO[ListItem.Title]</label>
							</control>
							<control type="label">
								<left>180</left>
								<top>58</top>
								<width>400</width>
								<align>left</align>
								<textcolor>white</textcolor>
								<selectedcolor>white</selectedcolor>
								<font>Med26</font>
								<label fallback="195">$INFO[ListItem.StartTime] - $INFO[ListItem.EndTime]</label>
								<visible>!IsEmpty(ListItem.Title)</visible>
							</control>
							<control type="label">
								<left>180</left>
								<top>130</top>
								<width>400</width>
								<align>left</align>
								<textcolor>white</textcolor>
								<selectedcolor>white</selectedcolor>
								<font>Light24</font>
								<label>$INFO[ListItem.NextTitle]</label>
								<visible>!IsEmpty(ListItem.NextTitle)</visible>
							</control>
							<control type="label">
								<left>180</left>
								<top>182</top>
								<width>400</width>
								<align>left</align>
								<textcolor>white</textcolor>
								<selectedcolor>white</selectedcolor>
								<font>Light24</font>
								<label>$INFO[ListItem.NextStartTime] - $INFO[ListItem.NextEndTime]</label>
								<visible>!IsEmpty(ListItem.NextTitle)</visible>
							</control>					
						</control>
					</itemlayout>

					<focusedlayout height="166">
						<control type="button">
							<texturefocus>-</texturefocus>
							<texturenofocus>-</texturenofocus>
							<onfocus>SetProperty(chan1,$INFO[ListItem.Icon],Home)</onfocus>
							<onfocus>SetProperty(chan2,$INFO[ListItemNoWrap(1).Icon],Home)</onfocus>
							<onfocus>SetProperty(chan3,$INFO[ListItemNoWrap(2).Icon],Home)</onfocus>
							<onfocus>SetProperty(chan4,$INFO[ListItemNoWrap(3).Icon],Home)</onfocus>
                            <onfocus>SetProperty(channame1,$INFO[ListItem.ChannelName],Home)</onfocus>
                            <onfocus>SetProperty(channame2,$INFO[ListItemNoWrap(1).ChannelName],Home)</onfocus>
                            <onfocus>SetProperty(channame3,$INFO[ListItemNoWrap(2).ChannelName],Home)</onfocus>
                            <onfocus>SetProperty(channame4,$INFO[ListItemNoWrap(3).ChannelName],Home)</onfocus>
						</control>
						<control type="image">
							<left>21</left>
							<top>160</top>
							<width>591</width>
							<height>2</height>
							<texture>pvr/_PVR_OSD_LINE.png</texture>
						</control>	
						<control type="image">
							<left>20</left>
							<top>0</top>
							<width>594</width>
							<height>154</height>
							<texture border="5">pvr/epg_button_nf.png</texture>
						</control>
						<control type="image">
							<left>40</left>
							<top>12</top>
							<width>117</width>
							<height>117</height>
							<texture fallback="views/pvr_fallback.png">$INFO[ListItem.Icon]</texture>
							<aspectratio>keep</aspectratio>
						</control>
						<control type="progress">
							<left>40</left>
							<top>136</top>
							<width>117</width>
							<height>6</height>
							<texturebg border="4">osd/progress_back.png</texturebg>
							<lefttexture>-</lefttexture>
							<midtexture border="4">osd/progress_bar.png</midtexture>
							<righttexture>-</righttexture>
							<overlaytexture>-</overlaytexture>
							<info>ListItem.Progress</info>
						</control>

						<control type="label">
							<left>40</left>
							<top>90</top>
							<width>117</width>
							<height>40</height>
							<align>left</align>
							<textoffsetx>10</textoffsetx>
							<textcolor>white</textcolor>
							<selectedcolor>white</selectedcolor>
							<font>Med20</font>
							<label fallback="195">$INFO[ListItem.ChannelName]</label>
							<visible>IsEmpty(ListItem.Icon)</visible>
						</control>

						<control type="group">
							<top>-100</top>
							<control type="label">
								<left>180</left>
								<top>0</top>
								<width>400</width>
								<align>left</align>
								<textcolor>ffFFC24B</textcolor>
								<selectedcolor>ffFFC24B</selectedcolor>
								<font>Med26</font>
								<label fallback="195">$INFO[ListItem.Title]</label>
							</control>
							<control type="label">
								<left>180</left>
								<top>58</top>
								<width>400</width>
								<align>left</align>
								<textcolor>ffFFC24B</textcolor>
								<selectedcolor>ffFFC24B</selectedcolor>
								<font>Med26</font>
								<label>$INFO[ListItem.StartTime] - $INFO[ListItem.EndTime]</label>
								<visible>!IsEmpty(ListItem.Title)</visible>
							</control>
							<control type="label">
								<left>180</left>
								<top>130</top>
								<width>400</width>
								<align>left</align>
								<textcolor>white</textcolor>
								<selectedcolor>white</selectedcolor>
								<font>Light24</font>
								<label>$INFO[ListItem.NextTitle]</label>
								<visible>!IsEmpty(ListItem.NextTitle)</visible>
							</control>
							<control type="label">
								<left>180</left>
								<top>182</top>
								<width>400</width>
								<align>left</align>
								<textcolor>white</textcolor>
								<selectedcolor>white</selectedcolor>
								<font>Light24</font>
								<label>$INFO[ListItem.NextStartTime] - $INFO[ListItem.NextEndTime]</label>
								<visible>!IsEmpty(ListItem.NextTitle)</visible>
							</control>
						</control>
					</focusedlayout>

				</control>

			</control>

			<!-- heading background -->
			<control type="image">
				<left>0</left>
				<top>-1</top>
				<width>630</width>			
				<height>90</height>
				<texture border="4,7,4,7">pvr/channel_osd_bg.png</texture>
			</control>

			<!-- Heading -->
			<control type="grouplist">
				<top>20</top>
				<width>480</width>
				<align>left</align>
				<left>25</left>
				<height>80</height>
				<itemgap>10</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<include>VisibleDelayFadeAnimation</include>
				<control type="label">
					<width max="360">auto</width>
					<height>60</height>
					<font>Med48</font>
					<aligny>bottom</aligny>
					<textcolor>ffdadada</textcolor>
					<label>[CAPITALIZE]$INFO[VideoPlayer.ChannelGroup][/CAPITALIZE]  </label>
				</control>
				<control type="label">
					<top>15</top>
					<width>auto</width>
					<height>60</height>
					<font>Med32</font>
					<aligny>bottom</aligny>
					<textcolor>ffdadada</textcolor>
					<label>$INFO[Container(11).CurrentItem]</label>
					<visible>IntegerGreaterThan(Container(11).NumItems,0)</visible>
				</control>
				<control type="label">
					<top>14</top>
					<width>auto</width>
					<height>60</height>
					<font>Light36</font>
					<aligny>bottom</aligny>
					<textcolor>ff505050</textcolor>
					<label>|</label>
					<visible>IntegerGreaterThan(Container(11).NumItems,0)</visible>
				</control>
				<control type="label">
					<top>15</top>
					<width>auto</width>
					<height>60</height>
					<font>Light32</font>
					<aligny>bottom</aligny>
					<textcolor>ff505050</textcolor>
					<label>$INFO[Container(11).NumItems]</label>
					<visible>IntegerGreaterThan(Container(11).NumItems,0)</visible>
				</control>
			</control>
			<!--  Current time -->
			<control type="grouplist">
				<left>460</left>
				<top>20</top>
				<width>150</width>
				<height>60</height>
				<align>right</align>
				<itemgap>3</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<include>VisibleDelayFadeAnimation</include>
				<control type="label">
					<top>15</top>
					<width>auto</width>
					<height>60</height>
					<font>Med32</font>
					<align>right</align>
					<aligny>bottom</aligny>
					<textcolor>ffdadada</textcolor>
					<label>$INFO[System.Time(HH)]</label>
				</control>
				<control type="label">
					<top>15</top>
					<width>auto</width>
					<height>60</height>
					<align>right</align>
					<aligny>bottom</aligny>
					<font>Light32</font>
					<textcolor>ff505050</textcolor>
					<label>:</label>
				</control>
				<control type="label">
					<top>15</top>
					<width>auto</width>
					<height>60</height>
					<align>right</align>
					<aligny>bottom</aligny>
					<font>Light32</font>
					<textcolor>ff505050</textcolor>
					<label>$INFO[System.Time(MM)]</label>
				</control>
			</control>

			<!-- list next and previous masks -->
			<control type="image">
				<top>84</top>
				<width>614</width>			
				<height>168</height>
				<visible>!Container(11).Row(0) + !StringCompare(Container(11).CurrentItem,1)</visible>
				<texture border="2" flipy="true">pvr/mask.png</texture>
			</control>
			<control type="image">
				<top>912</top>
				<width>614</width>
				<height>168</height>
				<visible>!Container(11).Row(5)</visible>
				<texture border="2">pvr/mask.png</texture>
			</control>
			<control type="group">
				<width>614</width>
				<left>289</left>
				<height>1080</height>
				<!-- Arrow up -->		
				<control type="image">
					<top>100</top>
					<width>36</width>
					<height>20</height>
					<texture>views/arrow_up.png</texture>
					<visible>IntegerGreaterThan(Container(11).NumItems,4) + !StringCompare(Container(11).CurrentItem,1)</visible>
					<animation delay="80" effect="fade" end="100" start="0" time="120">Visible</animation>
					<animation delay="80" effect="fade" end="0" start="100" time="120">Hidden</animation>
				</control>
				<!-- Arrow down -->
				<control type="image">
					<top>1022</top>
					<width>36</width>
					<height>20</height>
					<texture>views/arrow_down.png</texture>
					<visible>IntegerGreaterThan(Container(11).NumItems,5) + !StringCompare(Container(11).CurrentItem,Container(11).NumItems)</visible>
					<animation delay="80" effect="fade" end="100" start="0" time="120">Visible</animation>
					<animation delay="80" effect="fade" end="0" start="100" time="120">Hidden</animation>
				</control>
			</control>



		</control>
	</controls>
</window>
